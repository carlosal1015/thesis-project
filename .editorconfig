# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
continuation_indent_size = 8
combine_as_imports = true
max_line_length = 79
multi_line_output = 4
quote_type = single
skip = build,.tox,venv

[*.tex]
indent_style = tab
indent_size = 2

[*.yml]
indent_size = 2
indent_style=space
